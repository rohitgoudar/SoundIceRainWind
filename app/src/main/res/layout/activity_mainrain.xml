<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.appdeveloperrohitgmail.soundicerainwind.MainActivitysplash"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rainfall">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp">
            <Button
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="house exterior"
                android:id="@+id/button1"
                android:onClick="play1"
                android:layout_marginTop="10dp" />
            <Button
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="heavy thunder1"
                android:id="@+id/button2"
                android:onClick="play2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp">
            <Button
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="heavy thunder2"
                android:id="@+id/button3"
                android:onClick="play3"
                android:layout_marginTop="10dp" />
            <Button
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="rain dropletes"
                android:id="@+id/button4"
                android:onClick="play4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <Button
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="rain forest"
                android:id="@+id/button5"
                android:onClick="play5"
                android:layout_marginTop="10dp" />
            <Button
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="rain heavy"
                android:id="@+id/button6"
                android:onClick="play6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:id="@+id/button7"
            android:onClick="mainpage"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="right"/>

    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>