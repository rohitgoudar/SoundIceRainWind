<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.appdeveloperrohitgmail.soundicerainwind.MainActivitysplash"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ice1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="50dp">
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="breaking ice1"
                    android:id="@+id/button1"
                    android:onClick="play1"
                    android:layout_marginTop="10dp"
                    android:background="#c24159e8"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="breaking ice2"
                    android:id="@+id/button2"
                    android:onClick="play2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:background="#c24159e8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp">
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="ice drop"
                    android:id="@+id/button3"
                    android:onClick="play3"
                    android:layout_marginTop="10dp"
                    android:background="#c24159e8"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="ice collecting"
                    android:id="@+id/button4"
                    android:onClick="play4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:background="#c24159e8" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="ice cracking"
                    android:id="@+id/button5"
                    android:onClick="play5"
                    android:layout_marginTop="10dp"
                    android:background="#c24159e8"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="ice rain"
                    android:id="@+id/button6"
                    android:onClick="play6"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:background="#c24159e8" />
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:id="@+id/button7"
                android:onClick="mainpage"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="right"
                />

        </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>